# let the magic happen
if [ -n $1 ]; then
  $1
else
  task_install
  task_webstorm
  task_diodon
  # task_middleClick
  task_npm
  task_fonts
  task_grob
  # task_tuxedo
  task_folders
  # task_dreymar
  task_gsettings
  # task_cursor
